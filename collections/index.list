<nav id="nav">
	<squarespace:navigation navigationId="main-nav" template="navigation">
</nav>

<header id="header">

	{.section collection.mainImage}
		<figure class="content-fill">
			<img {@|image-meta}>
		</figure>
	{.end}

	{.section website}
		<h1 id="title">{siteTagLine}</h1>
	{.end}

	<a class="arrow" href="#main"></a>

</header>

<main>
	{.repeated section collection.collections}

		{.equal? typeName "blog"}
			<section class="blog">
				<h4>The Latest</h4>
				{.repeated section items}
					{.equal? @index 1}
						<h1>{title}</h1>
						<h2>{excerpt}</h2>
						<a href="{fullUrl}">View Post</a>
					{.end}
				{.end}
			</section>
		{.end}

		{.equal? typeName "page"}
			<section>
				{mainContent}
			</section>
		{.end}

	{.end}
</main>
